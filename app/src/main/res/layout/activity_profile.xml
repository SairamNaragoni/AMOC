<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onlinetreasurehunt2.ProfileActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="profile"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="94dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="Email"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="226dp" />


    <EditText
        android:id="@+id/member1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="member1"
        android:inputType="textPersonName"
        android:layout_below="@+id/emailProfile"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/member2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="member2"
        android:inputType="textPersonName"
        android:layout_below="@+id/member1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/member3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/member2"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="member3"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/member4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="member4"
        android:inputType="textPersonName"
        android:layout_below="@+id/member3"
        android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/teamname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="team name"
            android:inputType="textPersonName"
            android:layout_below="@+id/member4"
            android:layout_alignParentStart="true" />


        <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="Submit_Firebase"
        android:text="Submit"
        android:layout_below="@+id/teamname"
        android:layout_centerHorizontal="true" />

</RelativeLayout>



</RelativeLayout>